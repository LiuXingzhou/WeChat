<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_c_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/item_c_other_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/avert_yujian"/>

        <TextView
            android:id="@+id/item_c_other_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_other"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="古德猫宁"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_3"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_c_self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/item_c_self_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/avert_self"/>

        <TextView
            android:id="@+id/item_c_self_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/item_c_self_img"
            android:background="@drawable/chat_self"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="古德猫宁"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_3"/>

    </RelativeLayout>

</RelativeLayout>
