<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/actionBar"
                tools:context="com.islxz.wechat.activity.MainActivity">

    <LinearLayout
        android:id="@+id/main_actionbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/main_ab_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="微信"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_1"/>

            <ImageButton
                android:id="@+id/main_ab_ibtn"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/add"/>

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_v1"
        android:layout_below="@id/main_actionbar"
        android:background="@color/toolbar"></FrameLayout>

    <View
        android:id="@id/main_v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/main_toolbar"
        android:background="@color/transparent_part2"></View>

    <LinearLayout
        android:id="@id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/toolbar"
        android:orientation="horizontal"
        android:paddingTop="3dp">

        <LinearLayout
            android:id="@+id/main_t1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_t1_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/icon_wechat_select"/>

            <TextView
                android:id="@+id/main_t1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="微信"
                android:textColor="@color/green"
                android:textSize="@dimen/text_size_5"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_t2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_t2_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/icon_contacts"/>

            <TextView
                android:id="@+id/main_t2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="通讯录"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/text_size_5"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_t3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_t3_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/icon_discover"/>

            <TextView
                android:id="@+id/main_t3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发现"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/text_size_5"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_t4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_t4_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/icon_me"/>

            <TextView
                android:id="@+id/main_t4_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/text_size_5"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
